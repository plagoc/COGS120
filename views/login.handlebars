    <div class="container">
        <div id="login-container">

            <div class="text-center profile">
                <img id="logo" src="/images/fityalllogo.PNG" alt="fityalllogo png" class="img-fluid">
            </div>

            <form action="/index">
                <!--"text-center text-info"><b>FitY'all</b></h1> -->
                
                <input type="email" name="email" id="email" placeholder="Email" required>

