                <input type="submit" name="login" id="loginBtn" class="btn btn-info btn-md col-md-12" value="Login"/>

                <div id="facebook-div">
                    <p class="facebookLogin">
                        <div class="fb-login-button" data-size="medium" data-button-type="continue_with" data-auto-logout-link="false" data-use-continue-as="false" onlogin="checkLoginState();"></div>
                    </p>
                </div>

                <div id="signup-div">
                    <span id="signup-span">Don't have an account? <a href="/signup">Sign-up here</a>.</span>
                </div>  
            </form>
        </div>
            
