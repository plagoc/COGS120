	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/settingsCSS.css">
	<script type="text/javascript" src="/js/settings.js"></script>
</head>
<body>
	<div class="container">
		<div class="jumbotron">
			<h1>Settings</h1>
		</div>
	</div>

	<!-- TODO: Create Picture profile -->
	<div class="container">
		<h1 class="display-1">My Profile</h1>
		<div class="row">
			<div class="col-lg-6">
				<img src="/images/lorempixel.people.2.jpeg" alt="lorem pixel img" class="thumbnail">
				<div class="container">
					<button type="button" class="edit btn btn-lg btn-primary">Edit</button>
				</div>
			</div>
			<div class="col-lg-6">
				<h1 class="display-1">Name: Lorem Ipsum</h1>
				<h1 class="display-1">Goal: Dolor Etsum</h1>
				<h1 class="display-1">Display: Myaecenthas</h1>
			</div>
		</div>
	</div>

	<!-- TODO: Create Name, Goal, and Display Buttons -->
	

	<!-- TODO: Align switches with h1 -->
	<!-- Switches -->
	<div class="container">
		<div class="row">
			<div class="col-lg-6 setting">
				<h1 class="display-1">Weight</h1>
			</div>
			<div class="col-lg-6 setting">
				<div class="btn-group btn-group-toggle" data-toggle="buttons">
					<label class="btn btn-secondary active">
						<input type="radio" checked autocomplete="off" name="options" id="lbsOptions"> Pounds
					</label>
					<label class="btn btn-secondary">
						<input type="radio" name="options" autocomplete="off" id="kgOptions"> Kilograms
					</label>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6 setting">
				<h1 class="display-1">Graph</h1>
			</div>
			<div class="col-lg-6 setting">
				<div class="btn-group btn-group-toggle" data-toggle="buttons">
					<label class="btn btn-secondary active">
						<input type="radio" checked autocomplete="off" name="options" id="barOptions"> Bar
					</label>
					<label class="btn btn-secondary">
						<input type="radio" name="options" autocomplete="off" id="lineOptions"> Line
					</label>
				</div>
			</div>
		</div>
	</div>


